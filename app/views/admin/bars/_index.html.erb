<table class="table table-sm table-bordered table-white">
  <thead class="border-dark">
    <tr class="table-secondary text-center border-dark">
      <th>飲んだお店ID</th>
      <th>飲んだお店名</th>
      <th>所在地</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% bars.each do |bar| %>
      <tr>
        <td class="align-middle"><%= bar.id %></td>
        <td class="align-middle"><%= bar.name %></td>
        <td class="align-middle"><%= bar.location %></td>
        <td class="text-center align-middle">
          <%= link_to "編集", edit_admin_bar_path(bar), remote: true, class: 'btn btn-success px-2' %>
          <%= link_to "削除", admin_bar_path(bar), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger px-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>