<table class="table table-sm table-bordered table-white">
  <thead class="border-dark">
    <tr class="table-secondary text-center border-dark">
      <th>ビアスタイルID</th>
      <th>ビアスタイル名</th>
      <th>カテゴリー</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% beer_styles.each do |beer_style| %>
      <tr>
        <td class="align-middle"><%= beer_style.id %></td>
        <td class="align-middle"><%= beer_style.name %></td>
        <td class="align-middle"><%= beer_style.category_i18n %></td>
        <td class="text-center align-middle">
          <%= link_to "編集", admin_beer_style_path(beer_style), method: :post, remote: true, class: 'btn btn-success px-2' %>
          <%= link_to "削除", admin_beer_style_path(beer_style), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger px-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>