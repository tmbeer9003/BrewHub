<div class="d-flex mt-3">
  <div class="col-md-3", id="beer-style-form">
    <%= render "form", beer_style: @beer_style %>
  </div>

  <div class="col-md-9">
    <div id="error-message">
      <%= render "layouts/errors", obj: @beer_style %>
    </div>

    <div id="beer-style-list">
      <%= render "index", beer_styles: @beer_styles %>
    </div>

    <div class="d-flex justify-content-center">
      <%= paginate @beer_styles %>
    </div>
  </div>
</div>