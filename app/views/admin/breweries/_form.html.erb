<div class="card p-3">
  <div class="text-center mb-1">
    <h5><u>
    <% unless params[:id] %>
      ブルワリー新規登録
    <% else %>
      ブルワリー編集
    <% end %>
    </u></h5>
  </div>

  <%= form_with model: [:admin, brewery], local: false do |f| %>
    <% unless params[:id].nil? %>
      <div class="text-center">
        選択中のブルワリーID：<%= brewery.id %>
      </div>
    <% end %>
    <div class="form-group my-2">
      <%= f.text_field :name, placeholder: "ブルワリー名", class: "form-control" %>
    </div>

    <div class="form-group my-2">
      <%= f.select :location, Brewery.locations.keys.to_a, {prompt: '--所在地を選択--'}, class: "form-control"%>
    </div>

    <div class="form-group my-2">
      <%= f.text_area :description, placeholder: "ブルワリー説明", class: "form-control" %>
    </div>

    <div class="form-group my-2 text-center">
      <% unless params[:id] %>
        <%= f.submit "新規登録", class: "btn btn-success p-2" %>
      <% else %>
        <%= f.submit "編集する", class: 'btn btn-success p-2' %>
        <%= link_to "戻る", new_admin_brewery_path, remote: true, class: 'btn btn-primary p-2' %>
      <% end %>
    </div>
  <% end %>
</div>