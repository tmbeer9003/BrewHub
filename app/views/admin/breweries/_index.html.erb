<table class="table table-sm table-bordered table-white">
  <thead class="border-dark">
    <tr class="table-secondary text-center border-dark">
      <th>ブルワリーID</th>
      <th>ブルワリー名</th>
      <th>所在地</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td class="align-middle"><%= brewery.id %></td>
        <td class="align-middle"><%= brewery.name %></td>
        <td class="align-middle"><%= brewery.location %></td>
        <td class="text-center align-middle">
          <%= link_to "編集", admin_breweries_path(id: brewery.id), class: 'btn btn-success px-2' %>
          <%= link_to "削除", admin_brewery_path(brewery), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger px-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>