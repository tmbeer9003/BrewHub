<div class="card border-dark mt-1 px-2">
  <div class="card-body pt-3">
    <div class="row border-bottom pb-1">
      <div class="col-1 px-1 d-flex align-items-center">
        <%= image_tag group_post.member.get_member_image(50,50), class: "rounded-circle image-fit" %>
      </div>

      <div class="card-title col-11 mb-0 pl-1">
        <div class="d-flex text-align-center">
          <h6 class="font-weight-bold d-inline-block mb-0">
            <%= link_to admin_member_path(group_post.member), class: "text-reset" do %><%= group_post.member.display_name %><% end %>
            <span class="font-weight-normal mb-0">@<%= group_post.member.account_name %></span>
          </h6>

          <div class="flex-grow-1 text-secondary text-right small mr-2">
            <%= link_to "編集", edit_admin_group_group_post_path(group, group_post), class: "text-reset" %>
            <%= link_to "削除", admin_group_group_post_path(group, group_post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "text-reset" %>
          </div>
        </div>

        <div class="small d-block"><%= group_post.created_at.to_s(:datetime_jp) %></div>
        <div class="small d-block">コメント：<%= group_post.group_post_comments.count %>件</div>
      </div>
    </div>

    <div>
      <%= link_to admin_group_group_post_path(group, group_post), class:"text-reset" do %>
        <h5 class="font-weight-bold mb-0 mt-1"><i class="fas fa-feather-alt fa-sm"></i><%= group_post.title %></h5>
      <% end %>
      <span><%= group_post.content %></span>
    </div>
  </div>
</div>

