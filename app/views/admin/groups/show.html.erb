<div class="col-md-10 mx-auto">
  <%= render "show", group: @group %>

  <%= render "admin/group_posts/group_post_search", group: @group %>

  <% @group_posts.each do |group_post| %>
    <%= render "admin/group_posts/index", group: @group, group_post: group_post %>
  <% end %>

  <div class="d-flex justify-content-center mt-2">
    <%= paginate @group_posts %>
  </div>

  <div class="text-center mt-2">
    <%= link_to "戻る", admin_groups_path, class: "btn btn-primary px-4 rounded-pill" %>
  </div>
</div>