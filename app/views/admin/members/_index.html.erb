<% if members.present? %>

  <% members.each do |member| %>
  <div class="card border-dark mt-1 px-2">
    <div class="card-body row">

      <div class="col-1 px-1 d-flex align-items-center">
        <%= image_tag member.get_member_image(50,50), class: "rounded-circle image-fit" %>
      </div>

      <div class="col-5 mb-0 pl-1">
        <h5 class="font-weight-bold d-inline-block mb-0">
          <%= link_to admin_member_path(member), class: "text-reset" do %><%= member.display_name %><% end %></h5>
        <span class="d-inline-block mb-0">@<%= member.account_name %></span>
        <div><i class="fas fa-beer text-warning mr-1"></i><%= member.posts.count %> Beers</div>
      </div>

      <div class="col-6 d-flex align-items-center justify-content-end pr-0">
        <%= link_to "編集", edit_admin_member_path(member), class:"btn btn-success ml-2" %>
        <%= link_to "削除", admin_member_path(member), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger ml-2" %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="d-flex justify-content-center mt-2">
    <%= paginate members %>
  </div>

<% else %>
  <div class="text-center mt-3">
    <span>ユーザーがいません<span>
  </div>
<% end %>