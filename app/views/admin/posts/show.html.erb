<div class="card border-dark mt-3">
  <div class="row no-gutters">
    <div class="col-md-3 pr-2">
      <%= image_tag @post.get_post_image(250,250), class: "image-fit"  %>
    </div>
    <div class="card-body d-flex flex-column col-md-9 pt-2 px-3">
      <%= render "post_deteil", post: @post %>
    </div>
  </div>
</div>

<% if @post.post_comments.exists? %>
  <div class="card border-dark mt-2 px-2">
    <div id="post-comments-index">
    <%= render "admin/post_comments/post_comments_index", post_comments: @post_comments, post: @post %>
    </div>
  </div>
<% else %>
  <div class="text-center mt-3">
    <span>コメントはありません<span>
  </div>
<% end %>

<div class="d-flex justify-content-center mt-2">
  <%= paginate @post_comments %>
</div>

<div class="text-center">
  <%= link_to "戻る", admin_posts_path, class: "btn btn-primary px-4 rounded-pill" %>
</div>