<div class="col-md-3 mx-auto">
  <div class="card border-dark mt-3 p-3">
    <div class="row">
      <div class="col-6">
        <%= image_tag current_member.get_member_image(200,200), class: "rounded-circle image-fit" %>
      </div>

      <div class="col-6">
        <div class="font-weight-bold"><%= current_member.display_name %></div>
        <div class="small">@<%= current_member.account_name %></div>
        <div><i class="fas fa-beer text-warning mr-1"></i><%= current_member.posts.count %>Beers</div>
        <div class="small">フォロー</div>
        <div class="small">フォロワー</div>
      </div>
    </div>

    <div class="row py-2">
      <div class="col">
      こんにちは！
      </div>
    </div>

    <div class="row d-flex justify-content-center border-bottom">
      <span class="col-5 btn btn-secondary m-2">メッセージ</span>
      <span class="col-5 btn btn-secondary m-2">設定</span>
    </div>
    
     
    <% if current_member.posts.exists? %>
      <div class="row pt-2 pl-3">
        <u class="small text-secondary"><%= link_to "全ての投稿を見る", posts_path(member_id: current_member.id), class: "text-reset" %></u>
      </div>
      
      <div class="row p-2">
      <% current_member.posts.order(id: :desc).limit(9).each do |post| %>
        <div class="col-4 p-1">
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_post_image(150,150), class: "image-fit rounded" %>
          <% end %>
        </div>
        <% end %>
      </div>
      
    <% else %>
      <div class="row pt-2 pl-3">
        <span class="small">まだ投稿がありません<br>
        <u><%= link_to "ビールを探して投稿しましょう！", beers_path, class: "text-reset" %></u>
      </div>
    <% end %>
    
  </div>
</div>