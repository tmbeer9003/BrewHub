<%= render "beer_search", breweries: @breweries, beer_styles: @beer_styles %>
<% @beers.each do |beer| %>
<div class="card border-dark mt-3">
  <div class="card-body row pr-0">
    <div class="col-md-9">
      <div class="card-title mb-0">
        <h5 class="font-weight-bold d-inline-block mb-0">
          <%= link_to beer_path(beer), class: "text-reset" do %><i class="fas fa-beer fa-lg"></i><%= beer.name %><% end %></h5>
        <h6 class="d-inline-block mb-0"> / <%= beer.brewery.name %></h6>
      </div>
      <div class="border-bottom small"><%= beer.beer_style.name %></div>
      <div>
        <% if beer.evaluation == nil %>
          <span>未評価</span>
        <% else %>
          <%= beer.evaluation.round(2) %>
        <% end %>  
      </div>
    </div>
    <div class="col-md-3 d-flex align-items-center">
      <%= link_to "投稿", new_post_path(selected_beer: beer.id), class: "btn btn-success px-4 rounded-pill" %>
    </div>
  </div>
</div>
<% end %>
<div class="text-center mt-2">
<%= link_to new_beer_path, class: "text-reset" do %>
  <u>投稿したいビールが見つかりませんか？<br>こちらから情報を追加しましょう！</u>
<% end %>
</div>