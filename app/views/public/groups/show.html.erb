<%= render "show", group: @group %>

<% if current_member.joined_already?(@group) %>
  <%= render "public/group_posts/group_post_search", group: @group %>

  <div id="group-posts-index">
    <%= render "public/group_posts/index", group: @group, group_posts: @group_posts %>
  </div>

  <% else %>
    <div class="text-center mt-2">
      グループに参加するとトピックが表示されます
    </div>
<% end %>

<div class="d-flex justify-content-center mt-2">
  <%= paginate @group_posts %>
</div>

<div class="text-center mt-2">
  <%= link_to "戻る", groups_path, class: "btn btn-primary px-4 rounded-pill" %>
</div>