<div class="form-row mt-3 d-flex justify-content-end mr-1">
  <%= form_with url: mypage_cheers_list_path, method: :get do |f| %>
  <div class="input-group border border-secondary rounded-pill bg-white mb-1">
    <%= f.text_field :post_search, placeholder: "投稿を検索", class: "form-control form-control-sm input-group-prepend border-0 bg-transparent" %>
    <span class="input-group-btn">
     <%= f.button type: "submit",class: "border-0 form-control form-control-sm bg-transparent" do %><i class="fas fa-search"></i><% end %>
    </span>
  </div>
  <% end %>
</div>

<div class="col">
  <u><%= link_to "タイムライン", mypage_path, class: "mr-2 text-reset" %></u>
  <span class="mr-2">|</span>
  <h5 class="d-inline-block font-weight-bold">Cheersした投稿</h6>
</div>

<% @cheers.each do |cheer| %>
<div class="card border-dark mt-2">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= link_to post_path(cheer.post) do %>
        <%= image_tag cheer.post.get_post_image(250,250), class: "image-fit" %>
      <% end %>
    </div>
    <div class="card-body d-flex flex-column col-md-8 pt-2 px-3 mr-0">
      <%= render "public/posts/post_deteil", post: cheer.post %>
    </div>
  </div>
</div>
<% end %>