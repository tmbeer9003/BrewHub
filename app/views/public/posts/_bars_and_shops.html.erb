<div class="row form-group my-2">
  <div class="col-md-3">
    <%= f.label :bar_shop, "お店情報", class: "col-form-label" %>
  </div>
  <div class="col-md-9">
    <div class="form-check pl-0 mb-1">
      <%= f.collection_select :bar_id, bars, :id, :place_name, {prompt: '--飲んだお店--'}, class: 'form-control rounded-pill' %>
    </div>
    <div class="form-check pl-0">
      <%= f.collection_select :shop_id, shops, :id, :place_name, {prompt: '--買ったお店--'}, class: 'form-control rounded-pill' %>
    </div>
  </div>
</div>
