<%= render "post_search" %>

<% @posts.each do |post| %>
<div class="card border-dark mt-2">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= link_to post_path(post) do %>
        <%= image_tag post.get_post_image(250,250), class: "image-fit" %>
      <% end %>
    </div>
    <div class="card-body d-flex flex-column col-md-8 pt-2 px-3 mr-0">
      <%= render "post_deteil", post: post %>
    </div>
  </div>
</div>
<% end %>