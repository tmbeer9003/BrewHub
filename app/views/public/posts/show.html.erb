 <div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= render "post_search" %>
      <div class="card border-dark mt-2">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= image_tag @post.get_post_image(230,230) %>
          </div>
          <div class="card-body d-flex flex-column col-md-8 pt-2 px-3 mr-0">
            <div class="row card-text border-bottom mb-0 d-flex align-items-center">
              <%= image_tag @post.member.get_member_image(30,30) %>
              <h6 class="ml-1 mb-0"><%= @post.member.display_name %></h6>
              <span class="small ml-2"><%= @post.created_at.to_s(:datetime_jp) %></span>
              <div class="flex-grow-1 text-right small mr-2">
              <% if @post.member == current_member %>
                <%= link_to "編集", edit_post_path(@post), class: "text-secondary" %>
                <%= link_to "削除", post_path(@post), method: :delete, remote: true, "data-confirm" => "本当に削除しますか？", class: "text-secondary text-right" %>
              <% end %>
              </div>
            </div>
            <div class="row">
              <div class="mt-1 mb-0 card-title">
                <h5 class="font-weight-bold d-inline-block mb-0">
                  <%= link_to @post.beer.name, beer_path(@post.beer), class: "text-reset" %></h5>
                <h6 class="d-inline-block mb-0"> / <%= @post.beer.brewery.name %></h6>
              </div>
            </div>
            <div class="row">
              ★★★★☆ 4.0
              <span class="ml-2">
                <% if @post.serving_style == "draft" %>
                  <i class="fas fa-beer"></i>ドラフト
                <% elsif @post.serving_style == "can" %>>
                  <i class="fas fa-database"></i>缶
                <% elsif @post.serving_style == "bottle" %>
                  <i class="fas fa-wine-bottle"></i>ボトル
                <% else %>
                  <i class="fas fa-question"></i></i>その他
                <% end %>
              </span>
            </div>
            <div class="row">
              <span><%= @post.content %></span>
            </div>
            <div class="row small mt-auto">
              <% if @post.bar != nil %>
                <span>飲んだお店：<%= @post.bar.name %></span>
              <% end %>
              <% if @post.shop != nil %>
                <span>買ったお店：<%= @post.shop.name %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>